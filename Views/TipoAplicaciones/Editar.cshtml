@model Rocastone.Models.TipoAplicacion
@{
    ViewData["Title"] = "Editar";
}

<form method="post" asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="p-3">
        <div class="form-group row">
            <h2 class="text-primary">Editar Tipo de aplicación</h2>

            <div class="container">
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label asp-for="Nombre" class="form-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>


                <button type="submit" class="btn btn-outline-primary me-1">Editar</button>
                <a class="btn btn-outline-success" asp-controller="TipoAplicaciones" asp-action="Index">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
}

    }

