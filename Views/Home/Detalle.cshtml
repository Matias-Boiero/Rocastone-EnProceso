@model Rocastone.Models.ViewModels.DetalleViewModel

<div class="">
    <form method="post">
        <input asp-for="@Model.Producto.Id" type="hidden" />

        <div class="container backgroundWhite pt-4">
            <div class="card">
                <div class="card-header bg-secondary p-2 text-dark bg-opacity-75 row">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white disabled">@Model.Producto.Nombre</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <h1 class="text-white"> @((Model.Producto.Precio).ToString("C"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WebConstantes.ImagenRuta/@Model.Producto.imgUrl" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border text-dark" style="background-color:lavenderblush">@Model.Producto.Categoria.NombreCategoria</span>
                                        <span class="badge p-3 border text-dark" style="background-color:azure">@Model.Producto.TipoAplicacion.Nombre</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Producto.DescripcionProducto)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-primary form-control btn-lg" style="height:40px;">Regresar</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExisteEnCarro) @*Si es "true" el producto ya esta en el carro me aparece la opcion de removerlo*@
                            {
                                <a asp-action="RemoverDeCarro" asp-route-Id="@Model.Producto.Id" class="btn btn-danger form-control btn-lg" style="height:40px;">Remover del Carro</a>
                            }
                            else @*si es "false" me aparece la opcion agregar al carro*@
                            {
                                <button type="submit" asp-route-Id="@Model.Producto.Id" class="btn btn-success form-control btn-lg" style="height:40px;">Agregar al Carro</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
