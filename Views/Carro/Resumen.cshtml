@model Rocastone.Models.ViewModels.ProductoUsuarioViewModel

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Resumen de la Orden
                    </div>
                    <div class="col-12 text-end">
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Regresar al Carro</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Detalle del Usuario:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Nombre</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Nombre" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Nombre" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Apellido</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Apellido" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Apellido" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Telefono</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Telefono" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Telefono" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Email" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Provincia</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Provincia" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Provincia" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Ciudad</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Ciudad" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Ciudad" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Dirección</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Direccion" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Direccion" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Código Postal</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.CodigoPostal" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.CodigoPostal" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Resumen:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @foreach (var item in Model.ProductoLista)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@item.Nombre</h6>
                                                    <small class="text-muted">Precio por m &sup2: @item.Precio</small>
                                                </div>
                                                <div class="col-6 col-md-2 text-center auto">
                                                    <img src="@WebConstantes.ImagenRuta/@item.imgUrl" class="rounded" width="100%" />
                                                </div>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            <button type="submit" class="btn btn-primary form-control">Enviar Orden</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
