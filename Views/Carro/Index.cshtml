@model IEnumerable<Producto>

@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col -8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp;
                                Carro de Compras
                            </div>
                            <div class="col-12 text-end">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continuar Comprando</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-lg-7">
                                        Detalle de producto
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Precio por  m &sup2
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>

                            <hr />
                            @foreach (var obj in Model)@*Recorro todos los productos del Model.Producto*@
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@WebConstantes.ImagenRuta/@obj.imgUrl" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@obj.Nombre</h5>
                                        <div style="font-size:11px;">@obj.ShortDescripcion</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> $@obj.Precio</span>/ m &sup2

                                    </div>
                                    <div class="col-2 col-lg-1 p-0 pt-lg-4">
                                        <a asp-action="Remover" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash "></i> &nbsp; Eliminar
                                        </a>
                                    </div>
                                </div>
                            }

                            <hr />
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6 col-md-3 offset-md-9">
                                    <button type="submit" class="btn btn-success form-control ">
                                        @*El submit siempre llama al metodo post donde esta*@
                                        <span>Continuar</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}

else
{
    <div class="row">
        <div class=col-6>
            <p style="font-size:2rem"><span class="text-warning bg-black">--No hay productos en el carro--</span></p>
        </div>
    </div>

}
